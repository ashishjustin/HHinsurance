rule "carrier not available in Animal Liability"
when
    AnimalLiability(carrierList in ("GeoVera","Homeowners Choice","TypTap Home","Universal PC"))
then
    animalLiability.clear();
    animalLiability.add("Not Available");
end

rule "carrier for which $25 and sublimit of CoverageE is available"
when
    c:AnimalLiability(carrierList in ("Western World"))
then
    animalLiability.clear();
    animalLiability.add("Available - $25 ; Coverage - "+c.getCoverageE());
end

rule "carrier for which $50 and sublimit of CoverageE is available"
